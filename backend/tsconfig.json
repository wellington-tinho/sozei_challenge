{
  "compilerOptions": {
  	"target": "es2017",                                 
  	"module": "commonjs",                               
  	"lib": ["es6"],                                       
  	"rootDir": "./src",                                 
  	"typeRoots": [
  	  "./node_modules/@types",
  	  ".src/@types"
  	],                                                
  	"resolveJsonModule": true,                       
  	"outDir": "./dist",                                  
  	"removeComments": true,                          
  	"esModuleInterop": true,                            
  	"forceConsistentCasingInFileNames": true,        
  	"skipLibCheck": true                                
  }
}
